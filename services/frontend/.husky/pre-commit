#!/usr/bin/env sh

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged to format and lint only staged files
echo "ğŸ“ Running lint-staged..."
npx lint-staged || {
  echo "âŒ Lint-staged failed. Please fix the linting errors before committing."
  exit 1
}

# Run type checking - FAIL if there are TypeScript errors
echo "ğŸ” Running type checking..."
npm run typecheck || {
  echo "âŒ TypeScript errors found. Please fix the type errors before committing."
  exit 1
}

# Run unit tests (only if there are test files in the staged changes)
echo "ğŸ§ª Running unit tests..."
npm run test:unit || {
  echo "âŒ Unit tests failed. Please fix the failing tests before committing."
  exit 1
}

echo "âœ… Pre-commit checks completed!"
