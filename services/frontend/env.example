# ===========================================
# Frontend Environment Configuration
# ===========================================

# Application Environment
# -----------------------
NODE_ENV=development

# API Configuration
# -----------------
# In development with Traefik, the API URL should be relative
REACT_APP_API_URL=/api
# For external access, you might need:
# REACT_APP_API_URL=https://plosolver.yourdomain.com/api

# OAuth Configuration
# -------------------

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3001


# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_1234567890abcdef
STRIPE_PRICE_PRO_YEARLY=price_1234567890abcdef
STRIPE_PRICE_ELITE_MONTHLY=price_1234567890abcdef
STRIPE_PRICE_ELITE_YEARLY=price_1234567890abcdef



# Analytics Configuration
# -----------------------
# Google Analytics 4
REACT_APP_GA_MEASUREMENT_ID=G-TLLC5B11J5
REACT_APP_ENABLE_GA=true

# Meta (Facebook) Pixel
REACT_APP_META_PIXEL_ID=3613019098992917
REACT_APP_ENABLE_META=true

# Microsoft Clarity (optional)
REACT_APP_CLARITY_PROJECT_ID=xxxxxxxxxx
REACT_APP_ENABLE_CLARITY=false

# PostHog (optional)
REACT_APP_POSTHOG_API_KEY=phc_xxxxxxxxxx
REACT_APP_POSTHOG_HOST=https://app.posthog.com
REACT_APP_ENABLE_POSTHOG=false

# Feature Flags Configuration
# ---------------------------
# Control which features are selectable on the home page
# Set to 'true' to enable, 'false' to disable
# If not set, defaults to the values specified below




# Hand History Analyzer - Upload and analyze hand histories
REACT_APP_FEATURE_HAND_HISTORY_ANALYZER_ENABLED=false

# Tournament Mode - Tournament-style game setup
REACT_APP_FEATURE_TOURNAMENT_MODE_ENABLED=true

# Cash Game Mode - Cash game setup
REACT_APP_FEATURE_CASH_GAME_MODE_ENABLED=false



