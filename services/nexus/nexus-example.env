# Nexus Repository Staging Environment Variables
# This file contains environment-specific configuration for Nexus Repository

# Nexus Repository Configuration
NEXUS_URL=https://nexus.ploscope.com
NEXUS_ADMIN_USER=admin
NEXUS_ADMIN_PASSWORD=admin-staging-123
NEXUS_PYPI_PASSWORD=pypi-publisher-staging-123

# Repository Configuration
REPOSITORY_NAME=pypi-internal
REPOSITORY_GROUP_NAME=pypi-all

# Staging Environment
STAGING_HOST=staging.ploscope.com
NEXUS_DOMAIN=nexus.staging.ploscope.com

# Docker Configuration
DOCKER_COMPOSE_FILE=docker-compose-staging-nexus.yml
STAGING_NETWORK=staging-network

# Security Configuration
NEXUS_SECURITY_RANDOMPASSWORD=false
NEXUS_CONTEXT=/

# Logging Configuration
NEXUS_LOG_LEVEL=INFO
NEXUS_LOG_FILE=/opt/sonatype/nexus/logs/nexus.log

# Storage Configuration
NEXUS_DATA_PATH=/nexus-data
NEXUS_BLOB_STORE=default

# HTTP Configuration
NEXUS_HTTP_PORT=8081
NEXUS_MAX_THREADS=200
NEXUS_CONNECTION_TIMEOUT=20000
NEXUS_MAX_IDLE_TIME=30000

# Proxy Configuration
PYPI_PROXY_URL=https://pypi.org/
PYPI_CONTENT_MAX_AGE=1440
PYPI_METADATA_MAX_AGE=1440
PYPI_NEGATIVE_CACHE_TTL=1440

# User Agent Configuration
NEXUS_USER_AGENT_SUFFIX=PLOSolver-Staging

# Health Check Configuration
NEXUS_HEALTH_CHECK_INTERVAL=30s
NEXUS_HEALTH_CHECK_TIMEOUT=10s
NEXUS_HEALTH_CHECK_RETRIES=5
NEXUS_HEALTH_CHECK_START_PERIOD=120s
