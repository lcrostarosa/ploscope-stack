{
	"info": {
		"_postman_id": "plosolver-integration-tests",
		"name": "PLOSolver Integration Tests",
		"description": "Integration tests for PLOSolver API endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
